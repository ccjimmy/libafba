<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gamepadLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/buttonstart"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/button_start" />

    <ImageView
        android:id="@+id/buttoncoins"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonstart"
        android:src="@drawable/button_coins" />

    <ImageView
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="64dp"
        android:src="@drawable/button_6" />
    
    <ImageView
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_toLeftOf="@+id/button6"
        android:src="@drawable/button_5" />

    <ImageView
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button5"
        android:src="@drawable/button_4" />

    <ImageView
        android:id="@+id/stick_bottom"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/stick_bottom" />

    <ImageView
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:src="@drawable/button_1" />

    <ImageView
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:src="@drawable/button_2" />

    <ImageView
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/button6"
        android:layout_toRightOf="@+id/button5"
        android:src="@drawable/button_3" />

    <ImageView
        android:id="@+id/stick"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/stick" />

</RelativeLayout>